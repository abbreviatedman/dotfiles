# vim in new kitty window

# easy sudo
alias s *sudo $*

# yadm
alias yst yadm status
alias ya yadm add $*
alias yp yadm push
alias ypu yadm pull

# git
alias gst git status
alias ga git add $*
alias gco git commit
alias gcm 'git commit -m $1'
alias gp git push
alias gpu git pull
alias grv git remote -v
alias gn rm -rf .git && git init
alias gpsup 'git push -u origin $1'


# react
alias cra 'create-react-app $1'

# doom
alias ds doom sync
alias dmd doom doctor

# package management
alias yay yay --color=always $*
alias pacman pacman --color=always $*

# TDD
alias jest jest --color $*

# database management
alias smg sequelize model:generate $*

# Node
alias nid npm install --save-dev $*
alias ng npm install --global $*
alias niy npm init -y
